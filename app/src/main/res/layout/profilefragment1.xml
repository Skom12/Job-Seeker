<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHead1"
            android:background="@drawable/background2"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="2dp"
                app:civ_border_color="#000000"
                android:id="@+id/avatarIv"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_add_image"
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressbar_pic1"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutHead1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText

                android:id="@+id/PseudoiD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/black"
                tools:text="Pseudo" />

            <TextView
                android:id="@+id/EmailiD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="16dp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="Email" />


            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:enabled="true"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="Nom Prenom"
                android:layout_marginTop="20dp"/>

            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/buttonUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_bg"
                android:text="Télécharger votre CV"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                 />

            <Button
                android:id="@+id/buttonRinit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_bg"
                android:text="Réinsitalliser votre mot de passe"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_bg"
                android:text="Sauvegarder les modificatons"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                 />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>


